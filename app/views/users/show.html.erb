<div class="container">
  <div class="row" id="profile-row">
    <div class="col-md-3 col-md-offset-1 text-center">
      <%= image_tag @user.profile.avatar.url(:medium), class: 'avatar-img-show' %>
    </div>
    <% if user_signed_in? %>

      <%= link_to "Edit Profile", edit_user_profile_path(current_user), class: 'btn btn-default'%>

    <% end %>

    <div class="col-md-6 col-md-offset-1">

      <div class="well" id="well-technologies">
        <h1>  <%= @user.profile.username %></h1>
        <h3> <%= @user.profile.description %></h3>
        <%= @user.profile.favourite_technologie %>
      </div>
        <div class="well">
          <% if current_user.plan_id == 2 %>
        <%= @user.profile.contact_email %>
        <%= @user.profile.first_name %>
        <%= @user.profile.last_name %>

          <% end %>
        </div>

    </div>
  </div>
</div>
